<div class="form">
  <%= simple_form_for @response do |f| %>
    <%= f.input :full_name, label: 'Full or family name:' %>
    <%= f.input :attending, label: 'Please check the box if you will attend.' %>
    <br>
    <%= f.input :number_of_attendees, label: 'Number of attendees (please enter 0 if you are unable to attend):' %>
    <%= f.input :food_allergies, label: 'Please let us know if there are any food allergies we should be aware of:' %>
    <%= f.input :song_title, label: 'Please request a song that will guarantee to get you on the dance floor!' %>
    <%= f.input :singer, label: 'Please provide the singer, artist, or band name:' %>
    <%= f.input :comment, label: 'Leave a message for the happy couple:' %>
    <button class="btn waves-effect waves-light"><%= submit_tag "RSVP" %></button>

  <% end %>
</div>
